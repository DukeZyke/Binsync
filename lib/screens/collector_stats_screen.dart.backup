  Future<void> _loadMissedBins() async {
    final userId = FirebaseAuth.instance.currentUser?.uid;
    if (userId == null) return;

    final today = DateTime.now();
    final startOfWeek =
        today.subtract(Duration(days: today.weekday - 1));
    final startOfWeekDay = DateTime(startOfWeek.year, startOfWeek.month, startOfWeek.day);

    // Get pending trash that should have been collected this week
    final snapshot = await FirebaseFirestore.instance
        .collection('garbage_reports')
        .where('status', isEqualTo: 'pending')
        .where('timestamp',
            isLessThan: Timestamp.fromDate(startOfWeekDay.add(const Duration(days: 7))))
        .get();

    final missedList = <Map<String, dynamic>>[];

    for (var doc in snapshot.docs) {
      final data = doc.data();
      missedList.add({
        'id': doc.id,
        'type': 'Missed Bin',
        'location': data['address'] ?? 'Unknown location',
        'reportId': doc.id,
        'date': DateFormat('MM/dd/yyyy')
            .format((data['timestamp'] as Timestamp).toDate()),
        'trashId': doc.id,
      });
    }

    setState(() {
      _missedBins = missedList;
    });
  }

